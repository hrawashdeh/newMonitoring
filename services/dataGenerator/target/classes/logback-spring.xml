<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--
        Elasticsearch-Compatible JSON Logging Configuration
        Data Generator Service
        
        This service ALWAYS outputs JSON logs for Kibana/Elasticsearch compatibility.
        No profile-based switching - production-ready JSON logging only.
    -->
    
    <!-- Load Spring properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="data-generator"/>
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO"/>
    
    <!-- Console JSON Appender for Kubernetes/Elasticsearch -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Custom fields -->
            <customFields>{"service_name":"${APP_NAME}","environment":"production","service_type":"data-generator"}</customFields>
            
            <!-- Shorten logger names -->
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>
            
            <!-- Stack trace configuration -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>
    
    <!-- Package-specific loggers -->
    <logger name="com.leadertask.dataGenerator" level="INFO"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE_JSON"/>
    </root>
</configuration>
